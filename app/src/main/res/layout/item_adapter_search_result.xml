<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="147dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp">

        <com.example.tvsample.widget.RoundCornerImageView
            android:id="@+id/image"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            app:corner_radius="5dp"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/image"
            android:layout_toRightOf="@+id/image"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/image"
            android:layout_toRightOf="@+id/image"
            android:text="2017·大陸·網路局"
            android:textColor="@color/grey"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/actor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/label"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/image"
            android:layout_toRightOf="@+id/image"
            android:text="主演：張嘉譯 王曉晨 王維維 張子健"
            android:textColor="@color/grey"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/play_times"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/actor"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/image"
            android:layout_toRightOf="@+id/image"
            android:text="2017·大陸·網路局"
            android:textColor="@color/grey"
            android:textSize="12sp" />

        <Button
            android:layout_width="88dp"
            android:layout_height="28dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/image"
            android:background="@drawable/play"
            android:layout_alignParentBottom="true"
            android:text="@string/play"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:paddingLeft="20dp"
            android:paddingStart="20dp"
            android:layout_toEndOf="@+id/image"
            tools:ignore="RtlSymmetry"
            android:id="@+id/btn_play"/>

        <Button
            android:layout_width="88dp"
            android:layout_height="28dp"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/btn_play"
            android:layout_toRightOf="@+id/btn_play"
            android:background="@drawable/favorite_button2"
            android:paddingLeft="20dp"
            android:paddingStart="20dp"
            android:text="@string/collect"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            tools:ignore="RtlSymmetry"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"/>

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recycler_view"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"/>

</LinearLayout>